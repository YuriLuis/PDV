<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="corTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="hintTextColor">@color/cor_text_do_input_layout</item>
        <item name="android:textColor">@color/cor_text_do_input_layout</item>

    </style>

    <style name="corBotaoApp" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/cor_text_do_input_layout</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:icon">@color/cor_text_do_input_layout</item>
    </style>

    <style name="corRadioGroupSelecionado" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

</resources>
